{
  "private": false,
  "name": "homebridge-plugin-warmup",
  "version": "0.0.26",
  "description": "Unofficial Homebridge plugin exposing Warmup smart thermostats to Apple's HomeKit",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jondarrer/my-first-homebridge-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/jondarrer/my-first-homebridge-plugin/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && npm run copy-files",
    "containerised-homebridge": "npm run build && ./scripts/init.sh && docker-compose up --build --detach",
    "copy-files": "copyfiles --exclude \"**/*.spec.js\" --exclude \"**/mocks/*\" -u 1 src/* src/**/* src/**/**/* dist/",
    "lint": "eslint src/**.js --max-warnings=0",
    "lint-staged": "lint-staged",
    "local-homebridge": "npx homebridge -D -U ./.homebridge-dev",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "watch": "npm run build && npm link && nodemon"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^1.0.2",
    "warmup-api": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "homebridge": "^1.7.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "lcov-badge2": "^1.1.2",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.3"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "engines": {
    "homebridge": "^1.6.0",
    "node": "^18.19.0 || ^20.9.0"
  },
  "displayName": "Warmup Homebridge Plugin",
  "lint-staged": {
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix --quiet",
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  }
}
